#include <iostream>
#include <cmath>
#include <cstdlib>

using namespace std;

int Chapeu(float p, float h)
{
	float chapeu;
	
	chapeu= (p/h)*2.9;
	
	cout << "Chapeu: " << chapeu;
}

int Casaco(float p, float h, int idade)
{
	float casaco;
	int diferenca;
	
	casaco= (p*h)/288;
	
	if ((idade > 30) && (idade%10 == 0))
	{
		diferenca = (idade-30)/10;
		
		casaco= casaco+(0.125*diferenca);
		
		cout << "Casaco: " << casaco;
	}
	
	else
	{	
		cout << "Casaco: " << casaco;
	}
	
}

int Cintura(float p, int idade)
{
	float cintura;
	int diferenca;
	
	cintura= p/5.7;
	
	if((idade >= 28) && (idade%2 == 0))
	{	
		diferenca= (idade-28)/2;
		
		cintura= cintura+(1*diferenca);
		
		cout << "Cintura: " << cintura;
	}
	
	else
	{
		cout << "Cintura: " << cintura;
	}
}

int main()
{
	int escolha;
	int idade;
	float p;
	float h;
	
	for(;;)
	{
		cout << "Informe a sua altura em polegadas: ";
		cin >> h; 
		
        cout << "Informe o seu peso em libras: ";
		cin >> p;
		
        cout << "Informe a sua idade: ";
		cin >> idade; 
		
		Chapeu(p,h);
		
		cout << "\n";
		
		Casaco(p,h,idade);
		
		cout << "\n";
		
		Cintura(p,idade);
		
		cout << "\n";
		
        cout << "Pressione 1 para sair, ou qualquer outro numero para continuar: ";
		
		cin >> escolha;
		
		system("cls"); 
		
		if(escolha == 1)
		{
			break;
		}
		
	}
}
